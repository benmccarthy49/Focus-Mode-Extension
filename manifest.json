{
    "name": "Focus Mode Extension",
    "manifest_version": 3,
    "version": "1.0",
    "description": "Removes distractions from your browser",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "focusIcon.png",
            "32": "focusIcon.png",
            "64": "focusIcon.png"
        },
        "default_title": "Focus Mode"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://www.bbc.co.uk/*", "*://bbc.co.uk/*", "*://skysports.com/*", "*://www.skysports.com/*"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": false,
                "path": "rules.json"
            }
        ]
    },
    "content_scripts": [
        {
            "matches": ["*://youtube.com/*"],
            "js": ["contentScript.js"]
        }
    ]
}